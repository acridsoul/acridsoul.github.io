---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
import TechSkills from "../components/TechSkills";
import Chatbot from "@/components/chatbot.astro";

---

<Layout title="Acrid">
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
    <!-- Left Side - Personal Information -->
    <div class="relative w-full">
      <h1
        class=" animate__animated animate__hinge animate__delay-3s font-custom mb-5 text-2xl font-bold leading-tight md:text-4xl lg:text-4xl dark:text-white"
        id="acrisoul"
      >
     
        Hello I'm Awestin
      </h1>
      <div class="flex items-center mb-1">
        <i class="fas fa-code text-neutral-600 dark:text-neutral-400 mr-2"></i>
        <p class="font-custom text-base text-neutral-600 dark:text-neutral-400">
          Full Stack Developer & Security Researcher
        </p>
      </div>
      
      <div class="flex items-center mb-1">
        <i class="fas fa-laptop-code text-neutral-600 dark:text-neutral-400 mr-2"></i>
        <p class="font-custom text-base text-neutral-600 dark:text-neutral-400">
          Currently working on Open Source Projects
        </p>
      </div>
      
      <div class="flex items-center mb-1">
        <i class="fas fa-map-marker-alt text-neutral-600 dark:text-neutral-400 mr-2"></i>
        <p class="font-custom text-base text-neutral-600 dark:text-neutral-400">
          Based in Nairobi, Kenya
        </p>
      </div>
      
      <div class="flex items-center mb-3">
        <i class="fas fa-graduation-cap text-neutral-600 dark:text-neutral-400 mr-2"></i>
        <p class="font-custom text-base text-neutral-600 dark:text-neutral-400">
          Computer Science student at MKU
        </p>
      </div>
        <div id="info-container" class="p-8 w-80 text-center text-neutral-600 dark:text-neutral-400 font-custom">
          <p id="os-info" class="mb-2">Operating System Info</p>
          <p id="browser-info" class="mb-2">Browser Info</p>
          <p id="platform" class="mb-2">Platform</p>
          <p id="language" class="mb-2">Language</p>
        </div>
    </div>
  
    <!-- Right Side - Time and Tech Skills -->
    <div class="relative w-full flex flex-col items-center md:items-start">
      <h2 class="mb-3 text-3xl font-semibold font-custom text-white">Time in Nairobi, Kenya</h2>
      <div id="digital-clock" class="font-two px-14 text-[#17D4FE] text-3xl sm:text-3xl md:text-[35px] tracking-wide font-medium mt-[-5px]">
        <!-- Clock content here -->
      </div>
  
      <main class="container mx-auto px-4 mt-5">
        <TechSkills client:load />
      </main>
    </div>
  </div>
  

        <!-- <Button text="Follow me on 𝕏" link="https://x.com/acrisoul" /> -->
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div
            class="absolute bottom-0 z-40 w-16 h-16 -translate-x-6 -translate-y-1/2 lg:top-auto top-0 lg:-translate-y-[330px] rounded-full"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator text="Check out my projects" />
  <Projects />
  <Chatbot />
  <!-- <Separator text="Some of my writing" />
  <Writings /> -->
</Layout>
